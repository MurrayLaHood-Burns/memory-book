<div class='row my-2'>
  <div class='col'>
    <h3>{{album.title}}</h3>
  </div>
  <div class='col'>
    <div class='pull-right'>
      <input id='editToggle' type='checkbox' data-toggle='toggle' data-on="<i class='fa fa-pencil'></i> Edit" data-off="<i class='fa fa-pencil'></i> Edit">
    </div>
  </div>
</div>
<div class='row' ng-show='isEditMode'>
  <div class='col'>
    <form class='form-inline'>
      <div class='input-group'>
        <input type='text' class='form-control' placeHolder='New Title'>
        <span class='input-group-btn'>
          <button class='btn btn-primary' type='submit'>Submit</button>
        </span>
      </div>
    </form>
  </div>
</div>
